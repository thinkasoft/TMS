                                <field name="product_uom" required="1" attrs="{'readonly':[('control','!=',False)]}" />
                                <field name="product_uom_qty" on_change="on_change_amount(product_uom_qty, price_unit, product_id)" required="1" attrs="{'readonly':[('control','!=',False)]}"/>
