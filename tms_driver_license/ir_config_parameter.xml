<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data noupdate="1">


	<!-- Parameter to Avoid dispatching Travels when Driver License expires on next [parameter] days -->
	<record model="ir.config_parameter" id="tms_driver_license_security_days">               
      <field name="key">tms_driver_license_security_days</field> 
      <field name="value">5</field>              
    </record>

	<!-- Parameter to define notification for sending mails for driver liceses about to expire on next [parameter] days -->
	<record model="ir.config_parameter" id="tms_driver_license_notification_x_days">               
      <field name="key">tms_driver_license_notification_x_days</field> 
      <field name="value">30</field>              
    </record>
        
    </data>
</openerp>
